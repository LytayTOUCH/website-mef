<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Entity</th>
      <th>Expired Date</th>
      <th>Budget Source</th>
      <th>Attachement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.title %></td>
        <td><%= announcement.description %></td>
        <td><%= announcement.entity %></td>
        <td><%= announcement.bidding_expired_date %></td>
        <td><%= announcement.budget_source %></td>
        <td><%= link_to announcement.attachment_file_name, announcement.attachment.url, target: '_blank' %></td>
        <td><%= link_to 'Show', announcement %></td>
        <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
        <td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Announcement', new_announcement_path %>

