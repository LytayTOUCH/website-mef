source 'https://rubygems.org'
#Core gems of project at Back-end
gem 'rails', '4.2.4'
gem 'pg'
gem 'devise'
gem 'jbuilder', '~> 2.0'
# Install figaro custom key:value pares of application.yml
# Command, $ bundle exec figaro install
gem 'figaro'

#Core gems of project at Front-end
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'sass-rails', '~> 5.0'
gem 'uglifier', '>= 1.3.0'
gem 'sdoc', '~> 0.4.0', group: :doc

group :development, :test do
  gem 'byebug'
  gem 'rspec'
  gem 'guard-rails'
end

group :development do
  gem 'pry-rails'
  gem 'web-console', '~> 2.0'
  gem 'spring'
end

